<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="20dp" android:top="20dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >

            <gradient
                android:gradientRadius="85%p"
                android:endColor="#000000"
                android:startColor="#FFFFFF"
                android:type="radial"
                android:centerX="0.2"
                android:centerY="0.5"/>

            <size
                android:height="1dp"
                android:width="1dp" />

        </shape>
    </item>
    <item android:left="35dp" android:top="35dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >

            <gradient
                android:gradientRadius="85%p"
                android:endColor="#000000"
                android:startColor="#FFFFFF"
                android:type="radial"
                android:centerX="0.2"
                android:centerY="0.5"/>

            <size
                android:height="1dp"
                android:width="1dp" />

        </shape>
    </item>
</layer-list>

